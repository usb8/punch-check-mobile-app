<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">


    <TextView
        android:id="@+id/setting_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green_ground"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:paddingLeft="10dp"
        android:text="SETTING"
        android:textAlignment="center"
        android:textColor="@color/black_font"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        android:text="@string/scan_devices"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_nav_bar" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="29dp"
        android:background="#30ffffff"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/start_training_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/found_sensors" />

    <TextView
        android:id="@+id/found_sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/show_the_number_of_sensor"
        android:textColor="@color/green_ground"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toEndOf="@+id/scan_button"
        app:layout_constraintTop_toBottomOf="@+id/setting_nav_bar" />


    <TextView
        android:id="@+id/choose_sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Choose one sensor"
        android:textColor="@color/green_ground"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/start_training_btn"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/start_training_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:text="START TRAINING"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_nav_bar" />

    <Switch
        android:id="@+id/sound_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:checked="false"
        android:gravity="left"
        android:minHeight="48dp"
        android:text="Sound"
        android:textColor="@color/green_ground"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_nav_bar" />

    <View
        android:id="@+id/view1"
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:background="@color/green_ground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_btn" />

    <Switch
        android:id="@+id/notification_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:checked="false"
        android:gravity="left"
        android:minHeight="48dp"
        android:text="Notification"
        android:textColor="@color/green_ground"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_btn" />

    <View
        android:id="@+id/view2"
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:background="@color/green_ground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_btn" />

    <TextView
        android:id="@+id/signOut_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Sign Out"
        android:textColor="@color/green_ground"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableLeft="@drawable/ic_logout"/>
</androidx.constraintlayout.widget.ConstraintLayout>